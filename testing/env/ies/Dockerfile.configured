FROM test-env-base:centos7

RUN yum --assumeyes install epel-release
RUN rpm --import file:///etc/pki/rpm-gpg/RPM-GPG-KEY-EPEL-7
RUN yum install --assumeyes jq python-pip

COPY .default.key /etc/pki/tls/private/server.key
COPY .default.crt /etc/pki/tls/certs/server-chain.crt
COPY .ca.pem /etc/pki/tls/certs/irods-ca-bundle.pem
COPY ies/scripts/service.sh.template /tmp/
COPY ies/scripts/prep-svc-script.sh /tmp/prep-svc-script

RUN yum --assumeyes install \
      moreutils openssl python-virtualenv \
      https://files.renci.org/pub/irods/releases/4.1.10/centos7/irods-icat-4.1.10-centos7-x86_64.rpm
RUN yum --assumeyes install \
      https://files.renci.org/pub/irods/releases/4.1.10/centos7/irods-database-plugin-postgres-1.10-centos7-x86_64.rpm
RUN pip install pika

COPY ies/config/ipc-housekeeping.re /etc/irods/
COPY ies/scripts/config-irods.sh /tmp/

ARG DB_NAME=ICAT
ARG DB_PASSWORD=testpassword
ARG DB_USER=irods
ARG DBMS_HOST=dbms
ARG DBMS_PORT=5432
ARG DBMS_TYPE=postgres
ARG IRODS_CONTROL_PLANE_KEY=TEMPORARY__32byte_ctrl_plane_key
ARG IRODS_CONTROL_PLANE_PORT=1248
ARG IRODS_DEFAULT_RESOURCE=demoResc
ARG IRODS_FIRST_EPHEMERAL_PORT=20000
ARG IRODS_HOST=ies
ARG IRODS_LAST_EPHEMERAL_PORT=20199
ARG IRODS_NEGOTIATION_KEY=TEMPORARY_32byte_negotiation_key
ARG IRODS_SCHEMA_VALIDATION=https://schemas.irods.org/configuration
ARG IRODS_SYSTEM_GROUP=irods
ARG IRODS_SYSTEM_USER=irods
ARG IRODS_ZONE_KEY=TEMPORARY_zone_key
ARG IRODS_ZONE_NAME=tempZone
ARG IRODS_ZONE_PASSWORD=rods
ARG IRODS_ZONE_PORT=1247
ARG IRODS_ZONE_USER=rods

RUN /tmp/config-irods.sh
RUN /tmp/prep-svc-script

CMD [ "/service.sh" ]
